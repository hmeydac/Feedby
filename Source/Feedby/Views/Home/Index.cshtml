@{
    ViewBag.Title = "Feedby";
}

@section menu{        
    @Html.Partial("NavigationHeader", new Feedby.Models.MainMenu { Current = "Home" })
}

<div id="main-container"></div>

@section scripts{
    <script src="~/Scripts/app.js"></script>
    <script src="~/Scripts/controllers/timeline.controller.js"></script>
    <script type="text/javascript">
        var controller = new Feedby.TimelineController($("#main-container"));
        controller.init();
    </script>
}